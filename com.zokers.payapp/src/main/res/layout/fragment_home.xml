<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/linear_divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/logopic"
                android:padding="5dp">

                <LinearLayout
                    style="@style/border_style"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">

                    <ImageView
                        style="@style/icon_style"
                        android:layout_width="@dimen/margin_small"
                        android:layout_height="@dimen/margin_small"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_marginStart="@dimen/margin_small"
                        android:background="@android:color/holo_red_light" />

                    <EditText
                        style="@style/value_style"
                        android:hint="@string/hint_search_order"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/home_qr"
                    android:layout_width="0sp"
                    android:layout_height="@dimen/model_border_height"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_weight="1"
                    android:background="@color/model_border_bgcolor"
                    android:orientation="horizontal">

                </LinearLayout>

                <View
                    android:layout_width="@dimen/margin_small"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/home_collection"
                    android:layout_width="0sp"
                    android:layout_height="@dimen/model_border_height"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_weight="1"
                    android:background="@color/model_border_bgcolor"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/main" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/main" />
    </LinearLayout>
</ScrollView>